<Columnas>:
    orientation: "vertical"
    Menu:
        id: menu

<Folder>:
    height: 30
    size_hint: 1, None
    halign: "left"
    valign: "middle"
    font_size: 20
    size_hint: 1, None

<Menu>:
    orientation: "horizontal"
    size_hint: 1, None
    height: 50
    Button:
        text: "BORRAR"
        size_hint: 0.2, 1
        on_press: root.borrar_click()

<Scrolling>:
    size_hint: 1, 1

<Contenedor>:
    orientation: "horizontal"

<ContenedorAssets>:
    cols: 1
    size_hint: 1, None

<Encabezado>:
    # vinculacion entre el id y el ObjectProperty
    exit: exit_id
    reload: reload_id
    check: check_id

    orientation: "horizontal"
    size_hint: 1, None
    height: 30
    CheckBox:
        id: check_id
        size_hint: None, 1
        width: 20
    Label:
        id: lab_enc
        text: root.texto
        font_size: 20
        size_hint: 0.8, 1
    Button:
        id: reload_id
        text: "reload"
        font_size: 12
        size_hint: None, 1
        width: 50
    Button:
        id: exit_id
        text: "X"
        font_size: 20
        size_hint: None, 1
        width: 20
        on_press: root.cerrar(self)

<Filas>:
    orientation: "horizontal"
    size_hint: 1, None
    height: 30
    CheckBox:
        id: check_fila
        size_hint: None, 1
        width: 20

<Error>:
    orientation: "vertical"
    Button:
        text: "Salir"
        size_hint: 0.1, 0.1
        halign: "center"

<Principal>:
    id: principal
    orientation: "vertical"
    BoxLayout:
        id: box_log
        orientation: "horizontal"
        size_hint: None, None
        height: 100
        Label:
            text: "LOGGER"
            halign: "left"